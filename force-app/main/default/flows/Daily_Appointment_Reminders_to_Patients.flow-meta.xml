    <description>Runs every morning and sends email reminders to patients who have appointments the following day.</description>
    <environments>Default</environments>
    <formulas>
        <description>Formats the appointment start time into a patient-friendly text value (e.g., 10:30 AM).</description>
        <name>Formatted_Appointment_Time</name>
        <dataType>String</dataType>
        <expression>TEXT(
    MOD(VALUE(LEFT(TEXT({!Get_Patient_Email.Start_Time__c}), 2)) + 11, 12) + 1
)
&amp; &quot;:&quot; &amp;
MID(TEXT({!Get_Patient_Email.Start_Time__c}), 4, 2)
&amp; IF(VALUE(LEFT(TEXT({!Get_Patient_Email.Start_Time__c}), 2)) &lt; 12, &quot; AM&quot;, &quot; PM&quot;)</expression>
    </formulas>
    <formulas>
        <description>Returns tomorrow’s date.</description>
        <name>Tomorrow_Date</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 1</expression>
    </formulas>
